{
  "manifest_version": 3,
  "name": "AtlasChat",
  "description": "Governance-first interaction layer for AI chats. AtlasChat governs, it doesn't replace.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icon-grey-16.png",
    "32": "assets/icon-grey-32.png",
    "48": "assets/icon-grey-48.png",
    "128": "assets/icon-grey-128.png"
  },
  "action": {
    "default_title": "AtlasChat",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-grey-16.png",
      "32": "assets/icon-grey-32.png",
      "48": "assets/icon-grey-48.png",
      "128": "assets/icon-grey-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}